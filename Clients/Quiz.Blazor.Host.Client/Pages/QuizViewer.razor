@page "/QuizViewer"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@*@attribute [Authorize]*@

@inject HttpClient Http
@inject ILogger<QuizViewer> _logger

<PageTitle>Take a Quiz</PageTitle>

<h1>Take a Quiz</h1>


@if ((AvailableExams == null) || (AvailableExams.Count <= 0)) {
	<p><em>Loading...</em></p>
	return;
}

<section>
	@foreach (var exam in AvailableExams) {
		<div class="row">
			<div class="col">
				@exam.Code
			</div>
			<div class="col">
				@exam.Name
			</div>
		</div>
	}
</section>
