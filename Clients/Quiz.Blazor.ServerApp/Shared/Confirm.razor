<div>
	<p class="small d-none d-md-block">Please click one of the buttons below to close or cancel the modal</p>

	<button @onclick="Close" class="btn btn-primary" style="width: 5em;">Yes</button>
	<button @onclick="Cancel" class="btn btn-secondary mx-2" style="width: 5em;">No</button>
	@*<button @onclick="Cancel" class="btn btn-secondary mx-2" style="width: 5em;">Cancel</button>*@
</div>

@code {

	[CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;

	async Task Close() => await BlazoredModal.CloseAsync(ModalResult.Ok(true));
	async Task Cancel() => await BlazoredModal.CancelAsync();

}
